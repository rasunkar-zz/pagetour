{
    "files": {
        "root": "./",
        "lib": "./wwwroot/lib",
        "distDir": "./dist",
        "min": "./dist/min",
        "css": {

            "lib": "./wwwroot/lib/css",

            "src": "./wwwroot/scss/**/*.scss",

            "dest": "./wwwroot/css",

            "watch": "src"
        },

        "js": {

            "lib": "./wwwroot/lib/js",

            "src": "./wwwroot/js/**/*.js",

            "dest": "./dist/js",

            "watch": "src"
        },

        "images": {
            "src": "./wwwroot/images/**/*.+(png|jpg|jpeg|gif|svg)",
            "dest": "./dist/images"
        }

    }
}